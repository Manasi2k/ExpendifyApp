<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AddExpense">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
>

    <ImageView
        android:id="@+id/imgexpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/expense" />

    <EditText
        android:id="@+id/txtexpitm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Title"
        android:layout_margin="20dp"
        />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:entries="@array/country_arrays"
            android:minHeight="48dp"
            />

    <EditText
        android:id="@+id/txtexpcomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comment"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/txtexpamt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/butexp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:layout_margin="20dp"
        android:onClick="AddExpenses"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/butexphome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_margin="20dp"
        android:onClick="gohome"
        android:textAllCaps="false"/>
    </LinearLayout>

</ScrollView>