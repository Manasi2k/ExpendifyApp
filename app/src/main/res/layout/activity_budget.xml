<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    tools:context=".Budget">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="50dp"
        >

    <ImageView
        android:id="@+id/imgbudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/budget" />
    <EditText
        android:id="@+id/txtbudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Budget Amount"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/butaddbudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Budget"
        android:layout_margin="20dp"
        android:onClick="addbudget"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/butviewbudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Remaining"
        android:layout_margin="20dp"
        android:onClick="viewremaining"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/butbudgethome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_margin="20dp"
        android:onClick="MainActivity"
        android:textAllCaps="false"/>
    </LinearLayout>
</ScrollView>